<Window x:Class="Translator.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translator.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
        </Grid>
        
        <StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                <TextBlock Margin="0 0 5 0">Source:</TextBlock>
                <TextBox x:Name="SourceTextBox"
                         Width="300"
                         Height="20" Margin="0 0 5 0"></TextBox>
                <Button Width="20" Height="20">📁</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0 0 5 0">Target:</TextBlock>
                <TextBox x:Name="TargetTextBox"
                         Width="300"
                         Height="20" Margin="0 0 5 0"></TextBox>
                <Button Width="20" Height="20">📁</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
